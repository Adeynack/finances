#!/usr/bin/env ruby
require "fileutils"

# path to your application root.
APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

FileUtils.chdir APP_ROOT do
  puts "\n== Installing Ruby dependencies =="
  system! "gem install bundler --conservative"
  system("bundle check") || system!("bundle install")

  puts "\n== Installing node modules =="
  system! "yarn install"

  puts "\n== Detecting Current Database =="
  if system "bin/rails db:version"
    puts "\nA database was detected. Preparation and data loading are skipped."
  else
    puts "\nNo database detected."

    puts "\n== Preparing database =="
    system! "bin/rails db:prepare"

    puts "\n== Loading Data =="
    system! "bin/rails db:fixtures:load db:seed"
  end

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"
end
