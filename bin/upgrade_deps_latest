#!/usr/bin/env sh
set -e

echo "*****************************************************************"
echo "**  Upgrading Ruby Dependencies (major)                        **"
echo "*****************************************************************"
echo

bundle update --major

echo
echo "*****************************************************************"
echo "**  Upgrading JavaScript / TypeScript Dependencies (latest)    **"
echo "*****************************************************************"
echo

yarn upgrade --latest

echo
echo "*****************************************************************"
echo "**  Done!                                                      **"
echo "*****************************************************************"
echo
