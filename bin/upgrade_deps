#!/usr/bin/env sh
set -e

echo
echo "*****************************************************************"
echo "**  Upgrading GEM                                              **"
echo "*****************************************************************"
echo

gem update --system

echo "*****************************************************************"
echo "**  Upgrading Ruby Dependencies                                **"
echo "*****************************************************************"
echo

bundle update

echo
echo "*****************************************************************"
echo "**  Upgrading JavaScript / TypeScript Dependencies             **"
echo "*****************************************************************"
echo

yarn upgrade

echo
echo "*****************************************************************"
echo "**  Done!                                                      **"
echo "*****************************************************************"
echo
