{
  "all": {
    "sourceCodeDir": "app/javascript",
    "entrypointsDir": "app/javascript/entrypoints",
    "additionalEntrypoints": [
      "app/javascript/entrypoints/application.ts",
      "app/assets/images/**/*"
    ],
    "watchAdditionalPaths": [
      "app/javascript/**/*",
      "app/assets/**/*",
      "config/locales/**/*"
    ]
  },
  "development": {
    "autoBuild": true,
    "publicOutputDir": "vite-dev",
    "port": 3036
  },
  "test": {
    "autoBuild": true,
    "publicOutputDir": "vite-test",
    "port": 3037
  }
}
