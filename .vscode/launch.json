  "version": "0.2.0",
  "configurations": [
    {
      "name": "Rails",
      "type": "ruby_lsp",
      "request": "launch",
      "program": "bin/rails server"
    },
    {
      "name": "Vite",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn build --watch",
      "preLaunchTask": "Sleepdelay"
    },
    {
      "name": "gql-compile",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn gql-compile --watch"
    }
  ],
  "compounds": [
    {
      "name": "Run App",
      "configurations": [
        "Rails",
        "Vite",
        "gql-compile"
      ],
      "stopAll": true,
      "presentation": {
        "group": "1_dev",
        "order": 1
      }
    }
  ]
}
