header class="Header js-details-container Details px-3 px-md-4 px-lg-5 flex-wrap flex-md-nowrap"
  / App logo
  .Header-item.mt-n1.mb-n1.d-none.d-md-flex
    .h2 = "ðŸ’°"
  / Narrow screen: Navigation toggle
  .Header-item.d-md-none
    = c.icon_button icon: "three-bars", aria_label: "Toggle navigation menu", classes: "Header-link js-details_target btn-link"
  .Header-item.Header-item--full.flex-column.flex-md-row.width-full.flex-order-2.flex-md-order-none.mr-0.mt-3.mt-md-0.Details-content--hidden-not-important.d-md-flex
    / Main Navigation
    nav.d-flex.flex-column.flex-md-row.flex-self-stretch.flex-md-self-auto id="global-nav" aria-label="Global"
      - if @book
        - link_classes = "Header-link mt-md-n3 mb-md-n3 py-2 py-md-3 mr-0 mr-md-3 border-top border-md-top-0 border-white-fade navbar__item--truncated"
        = link_to @book.name, @book, title: "Book '#{@book.name}'", strict: true, class: link_classes
        = link_to "Accounts", book_accounts_path(@book), title: "Accounts of book '#{@book.name}'", class: link_classes
        = link_to "Categories", book_categories_path(@book), title: "Categories of book '#{@book.name}'", class: link_classes
      = link_to "Books", books_path(book_id: @book&.id), strict: true, title: "List of all accessible books", class: link_classes
